<div class="container-fluid position-absolute h-100">
  <div class="row h-100 d-flex align-items-center justify-content-center">
    <div class="col-lg-5">
      <%= form_with model: @user, url: user_path(id: 1), method: :patch do |form| %>
        <%= render "layouts/flash_messages" %>
        <div class="card">
          <div class="card-header">
            <h5 class="m-0 text-center py-2">Profile</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.text_field :first_name, class: "form-control", placeholder: "First Name" %>
              </div>
              <div class="col-md-6 mb-3">
                <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
              </div>
              <div class="col-md-12 mb-3">
                <%= form.email_field :email, class: "form-control", placeholder: "Email", required: true %>
              </div>
              <div class="col-md-12 d-grid gap-2">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>